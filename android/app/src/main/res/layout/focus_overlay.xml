<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"> <!-- semi-transparent background -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="#AA000000"
        android:elevation="5dp"
        android:gravity="center">

        <!-- Logo aplikasi -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo Aplikasi"
            android:layout_gravity="center" />

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mode Fokus Aktif"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

   
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sesi fokus sedang aktif. Aplikasi lain diblokir sementara."
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:gravity="center"
            android:textAlignment="center" />

       
        <Button
            android:id="@+id/btn_back_to_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kembali ke Sesi Fokus"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

    </LinearLayout>

</FrameLayout>
